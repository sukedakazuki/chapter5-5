<%= render 'layouts/search' %>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <h3>Users search for "<%= @content %>"</h3>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td><%= link_to user.name,user %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <h3>Books search for "<%= @content %>"</h3>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
          <td><%= link_to book.title,book %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
